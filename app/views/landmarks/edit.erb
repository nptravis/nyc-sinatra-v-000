<h1>Edit a Landmark</h1>

<form method="post" action="/landmarks/<%= @landmark.id %>">
	
	<label>Landmark Name:</label><br>
	<input id="name" type="text" name="landmark[name]" value="<%= @landmark.id %>"><br>
	<label>Year Completed:</label><br>
	<input id="year_completed" type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>"><br>

	<input id="hidden" type="hidden" name="_method" value="patch">
	<input type="submit" value="Edit Landmark">
</form>